{ 
	"manifest_version": 3,
	"name": "Railgun",
	"version": "0.0.14",
	"description": "A single-tap raiding keybinder to rival the likes of Koru",
	"icons": { 
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"content_scripts": [{
		"matches": [
			"https://*.nationstates.net/*"
		],
		"js": [ 
			"src/railgunlib.js",
			"src/loadsettings.js",
			"src/handlers.js",
			"src/requestslib.js",
			"src/statusbox.js",
			"src/railgun.js"
		]
	}],

	"options_ui": {
		"page": "src/settings.html",
		"open_in_tab": true
	},

	"host_permissions":[
		"https://*.nationstates.net/*"	
	], 

	"permissions":[
		"cookies",
		"storage"
	],

	"browser_specific_settings":{
		"gecko":{
			"id":"railgun@alexfromnationstates",
			"strict_min_version": "109.0"
		}
	}
}
