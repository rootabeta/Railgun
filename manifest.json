{ 
	"manifest_version": 3,
	"name": "Railgun",
	"version": "0.0.2",
	"description": "A single-tap raiding keybinder to rival the likes of Koru",
	"icons": { 
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"content_scripts": [{
		"matches": [
			"https://*.nationstates.net/*"
		],
		"js": [ 
			"src/railgun.js"
		]
	}],
	"options_ui": {
		"page": "src/settings.html",
		"open_in_tab": true
	},

	"permissions":["storage"],

	"browser_specific_settings":{
		"gecko":{
			"id":"railgun@alexfromnationstates"
		}
	}
}
